<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EverywhenAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>

<!--
        <item name="colorPrimary">@color/blue_txt_color</item>
-->
        <item name="colorPrimaryVariant">@color/blue_txt_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorControlActivated">@color/grey_txt_color1</item>
        <item name="android:itemBackground">@color/white</item>

        <!--
        <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
-->
        <item name="android:textColor">@color/grey_txt_color1</item>
        <item name="buttonTint">@color/blue_txt_color</item>
        <!--
        </style>
-->
    </style>

    <style name="SplashTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:colorControlActivated">@color/grey_txt_color1</item>
        <item name="android:colorControlNormal">@color/hint_color</item>



    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/grey_txt_color1</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/grey11
        </item>
    </style>

<!--
    <style name="SplashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
-->

    <style name="SplashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">left</item>
<!--
        <dimen name="navigation_icon_size">20dp</dimen>
-->
        <item name="android:typeface">monospace</item>
    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar"/>




</resources>