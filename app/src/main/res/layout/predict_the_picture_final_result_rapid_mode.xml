<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/result_gradiant">

        <!-- <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/_30sdp"
             android:layout_marginTop="@dimen/_100sdp"
             android:layout_marginRight="@dimen/_30sdp"
             android:layout_marginBottom="@dimen/_100sdp"
             app:cardCornerRadius="@dimen/_10sdp"
             android:elevation="8dp"
             android:padding="5dp">


             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@drawable/bluebackground" />

         </androidx.cardview.widget.CardView>-->

        <RelativeLayout
            android:id="@+id/relative_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_320sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_yellow_border">


            <TextView
                android:id="@+id/result1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:foregroundGravity="top"
                android:gravity="center_horizontal"
                android:text="BRAVO!!"
                android:textColor="@color/border"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/result2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result1_tv"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:foregroundGravity="top"
                android:gravity="center_horizontal"
                android:text="That's a good prediction"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />


            <RelativeLayout
                android:id="@+id/result3_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_below="@+id/result2_tv"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_yellow_fill">


                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:text="YOU HAVE EARNED"
                    android:textColor="@color/result_txt"
                    android:textSize="@dimen/_14sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/txt1"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/gem_fontawesome"
                        android:textColor="@color/result_txt"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textColor="@color/result_txt"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/gem_fontawesome"
                        android:textColor="@color/result_txt"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="1XP"
                        android:textColor="@color/result_txt"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:id="@+id/result4_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result3_rl"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:foregroundGravity="top"
                android:gravity="center_horizontal"
                android:text="Your next round commence in"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:id="@+id/result5_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result4_tv"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:foregroundGravity="top"
                android:gravity="center_horizontal"
                android:text="3 DAYS 2 HOURS"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/relative_rl"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/gradiant_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_70sdp"
            android:background="@drawable/bluebackground"
            android:src="@drawable/ew_whitelogo" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>