<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_30sdp">


        <TextView
            android:id="@+id/hall_of_fame_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/hall_of_fame_btn"
            android:gravity="center"
            android:text="Hall Of Fame"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/hall_of_fame_txt"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/rounded_corner_ques">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/gradiant_color3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_pattern" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Everywhen"
                android:gravity="center_horizontal"
                android:foregroundGravity="top"
                android:textSize="@dimen/_16ssp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textAllCaps="true"
                android:textColor="@color/white"/>


            <ImageView
                android:id="@+id/logo11"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_50sdp"
                android:src="@drawable/ew_whitelogo"
                android:layout_below="@+id/title"/>


            <TextView
                android:id="@+id/txt11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You seem to be at your prime today"
                android:gravity="center_horizontal"
                android:foregroundGravity="top"
                android:textSize="@dimen/_10ssp"
                android:layout_below="@+id/logo11"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textAllCaps="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have aced the test"
                android:gravity="center_horizontal"
                android:foregroundGravity="top"
                android:textSize="@dimen/_16ssp"
                android:layout_below="@+id/txt11"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textAllCaps="true"
                android:textColor="@color/border"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt22"
                android:background="@drawable/rounded_corner_yellow"
                android:layout_margin="@dimen/_30sdp">

                <TextView
                    android:id="@+id/txt33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/txt_color3"
                    android:textSize="@dimen/_10sdp"
                    android:text="The answers you provided matched 65% of the ones provided by the everywhen users"/>



                <TextView
                    android:id="@+id/txt44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/txt33"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/txt_color3"
                    android:text="The answers you provided matched 65% of the ones provided by the everywhen users"/>


            </RelativeLayout>



        </RelativeLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>