<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data class="PurchaseFlairFragmentBinding">

        <variable
            name="purchaseFlairViewModel"
            type="com.mexcelle.everywhendemo.viewModel.PurchaseFlairViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ui.slideshow.SlideshowFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:background="@drawable/gradiant1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hall_of_fame_bg" />

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:src="@drawable/ew_whitelogo"/>

                    <TextView
                        android:id="@+id/txt11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_toRightOf="@+id/logo"
                        android:text="TOP CHAMPIANS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18ssp" />

                    <TextView
                        android:id="@+id/txt33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt11"
                        android:layout_toRightOf="@+id/logo"
                        android:text="the gatherings of the WINNERS"
                        android:textColor="@color/ed_border_color1"
                        android:textSize="@dimen/_10ssp" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_below="@+id/txt33"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_color="@color/score1_bg"
                        app:civ_border_width="@dimen/_6ssp" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/txt33"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_color="@color/score1_bg"
                        app:civ_border_width="@dimen/_6ssp" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image3"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_40sdp"
                        app:civ_border_width="@dimen/_6ssp"
                        app:civ_border_color="@color/score1_bg"
                        android:src="@mipmap/ic_launcher"
                        android:layout_below="@+id/txt33"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/image1"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@drawable/rounded_corner_edittext1"
                        android:padding="@dimen/_20sdp">


                        <LinearLayout
                            android:id="@+id/one"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_image"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:src="@mipmap/ic_launcher"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <TextView
                                android:id="@+id/name11"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="Kirk Kirby"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/score"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="4"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/two"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_below="@+id/one"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_image1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:src="@mipmap/ic_launcher"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <TextView
                                android:id="@+id/name1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="Kirk Kirby"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/score1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="4"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/three"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_below="@+id/two"
                            android:src="@mipmap/ic_launcher"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_image2"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:src="@mipmap/ic_launcher"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <TextView
                                android:id="@+id/name2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="Kirk Kirby"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/score2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="4"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/four"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_below="@+id/three"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_image3"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:src="@mipmap/ic_launcher"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <TextView
                                android:id="@+id/name3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="Kirk Kirby"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/score3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="4"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/five"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_below="@+id/four"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_image4"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:src="@mipmap/ic_launcher"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <TextView
                                android:id="@+id/name4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="Kirk Kirby"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/score4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="4"
                                android:textColor="@color/grey_txt_color1"
                                android:textSize="@dimen/_12ssp" />>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_below="@+id/five"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/rounded_corner_1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt43"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Next question arrives in"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/txt44"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="3 hrs 20 mins"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />


                        </LinearLayout>


                    </RelativeLayout>





                </RelativeLayout>


            </ScrollView>



        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>