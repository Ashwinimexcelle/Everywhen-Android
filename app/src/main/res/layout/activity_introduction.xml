<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_40sdp"
    tools:context=".ui.ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/everywhen_intro" />


                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_50sdp">


                    <com.airbnb.lottie.LottieAnimationView

                        android:id="@+id/animation_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_400sdp"
                        android:layout_centerVertical="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/readar" />


                    <com.airbnb.lottie.LottieAnimationView

                        android:id="@+id/animation_view1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_400sdp"
                        android:layout_centerVertical="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/radar" />

                    <ImageView
                        android:id="@+id/rl"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:src="@drawable/white_circle"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/user_imageView6"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logo1" />


                </RelativeLayout>




                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:text="Welcome "
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_toRightOf="@+id/txt1"
                    android:text="CLARA "
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_toRightOf="@+id/txt2"
                    android:text="To "
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_marginLeft="@dimen/_100sdp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sdp" />

                <TextView
                    android:id="@+id/intro_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:text="Within seven seconds of meeting someone
new, we decide what we think of them. It's
an automatic reaction that we don't even
realize we have.\n\n\n
It's fast and instinctive, but we use it all the
time with our rational side." />


                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/proceed_btn"
                    android:layout_below="@+id/intro_txt1"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:text="TAKE THIS QUIZ TO FIND OUT MORE..."
                    android:textColor="@color/sidemenu_txt"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/proceed_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/gradiant_bg"
                    android:gravity="center"
                    android:text="Proceed to Quiz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />


            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

