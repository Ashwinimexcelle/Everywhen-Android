<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_40sdp"
    tools:context=".ui.ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/everywhen_intro" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_imageView"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_imageView1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


            <ImageView
                android:id="@+id/user_imageView6"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_225sdp"
                android:src="@drawable/ew_whitelogo"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_imageView2"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_below="@+id/user_imageView"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_imageView4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/user_imageView"
                android:layout_marginLeft="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_imageView3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/user_imageView2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_imageView5"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/user_imageView3"
                android:layout_marginLeft="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />


            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:text="Welcome "
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView

                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_toRightOf="@+id/txt1"
                android:text="CLARA "
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView

                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_toRightOf="@+id/txt2"
                android:text="To "
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView

                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_marginLeft="@dimen/_100sdp"
                android:text="EVERYWHEN"
                android:textColor="@color/white"
                android:textSize="@dimen/_24sdp" />

            <TextView
                android:id="@+id/intro_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:text="Within seven seconds of meeting someone
new, we decide what we think of them. It's
an automatic reaction that we don't even
realize we have.\n\n\n
It's fast and instinctive, but we use it all the
time with our rational side." />


            <TextView
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/intro_txt1"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:layout_above="@+id/proceed_btn"
                android:text="TAKE THIS QUIZ TO FIND OUT MORE..."
                android:textColor="@color/sidemenu_txt"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/proceed_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/gradiant_bg"
                android:gravity="center"
                android:text="Proceed to Quiz"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />


        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

