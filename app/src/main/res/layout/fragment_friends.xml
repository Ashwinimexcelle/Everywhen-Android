<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data class="FriendsFragmentBinding">

        <variable
            name="friendsViewModel"
            type="com.mexcelle.everywhendemo.viewModel.FriendsViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_30sdp"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_165sdp"
                        android:background="@drawable/bluebackground"/>


                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_165sdp"
                        android:layout_marginTop="@dimen/_80sdp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        `

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:background="@drawable/rounded_corner_friend_profile">


                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:text="Carla Davis"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/name"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:background="@drawable/rounded_corner_gradiant_3"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/location_title_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"
                                        android:gravity="left"
                                        android:text="Location"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp" />

                                    <TextView
                                        android:id="@+id/location_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"
                                        android:gravity="left"
                                        android:text="Baltimore"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/ethinicity_title_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"
                                        android:gravity="left"
                                        android:text="Ethinicity"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp" />

                                    <TextView
                                        android:id="@+id/ethinicity_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"
                                        android:gravity="left"
                                        android:text="Caucasian"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/age_title_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"
                                        android:gravity="left"
                                        android:text="Age"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp" />

                                    <TextView
                                        android:id="@+id/age_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"
                                        android:gravity="left"
                                        android:text="29"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>


                            </LinearLayout>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/_60sdp"
                                android:layout_toLeftOf="@+id/add_friend"
                                android:src="@drawable/badge" />

                            <TextView
                                android:id="@+id/add_friend"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:background="@drawable/rounded_corner_add_friend"
                                android:gravity="center"
                                android:text="Add Friend"
                                android:textColor="@color/gradiant_color3"
                                android:textSize="@dimen/_10ssp" />


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_50sdp"
                                android:src="@drawable/google_icon"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="@dimen/_2sdp" />

                        </RelativeLayout>


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txt55"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl1"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="YOur Score Strak"
                        android:textAllCaps="true"
                        android:textColor="@color/primary1"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:id="@+id/graph"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@+id/txt55"
                        android:layout_margin="@dimen/_20sdp">


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/leaderboard_score_ll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_below="@+id/graph"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/rounded_corner_bg1"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/leader_board_title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:text="Leaderboard Score"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/leader_board_analysis_title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:text="Analysis"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.25"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/leaderboard_score_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:text="128"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="right"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/leaderboard_analysis_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:text="3.56%"
                                android:background="@drawable/rounded_corner_color_bg1"
                                android:gravity="center"
                                android:padding="@dimen/_6sdp"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/awards_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/leaderboard_score_ll"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="Awards"
                        android:textAllCaps="true"
                        android:textColor="@color/primary1"
                        android:textSize="@dimen/_12sdp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/awards_tv"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/badge1"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/badge" />

                        <ImageView
                            android:id="@+id/badge2"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/badge"
                            android:layout_toRightOf="@+id/badge1"/>

                        <ImageView
                            android:id="@+id/badge3"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/badge"
                            android:layout_toRightOf="@+id/badge2"/>

                        <ImageView
                            android:id="@+id/badge4"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/badge"
                            android:layout_toRightOf="@+id/badge3"/>

                        <ImageView
                            android:id="@+id/badge5"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/badge"
                            android:layout_toRightOf="@+id/badge4"/>

                    </RelativeLayout>






                </RelativeLayout>


            </ScrollView>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>